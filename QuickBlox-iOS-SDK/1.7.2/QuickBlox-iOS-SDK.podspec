  s.name         = "QuickBlox-iOS-SDK"
  s.version      = "1.7.2"
  s.summary      = "A CocoaPods-friendly fork of QuickBlox-iOS-SDK version 1.7.2."
  s.homepage     = "https://github.com/alan-honeycutt/quickblox-ios-sdk"


  # ――― Author Metadata  ――――――――――――――――――――――――――――――――――――――――――――――――――――――――― #
