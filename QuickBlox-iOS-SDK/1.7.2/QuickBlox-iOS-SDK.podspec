  s.requires_arc = true

  s.ios.dependency   'KissXML'
  s.compiler_flags = '-ObjC'
  s.xcconfig = { 'FRAMEWORK_SEARCH_PATHS' => '"$(PODS_ROOT)/QuickBlox-iOS-SDK/Framework"' }  

end
